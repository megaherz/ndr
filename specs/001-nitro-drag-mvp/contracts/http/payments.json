{
  "openapi": "3.0.0",
  "info": {
    "title": "Nitro Drag Royale - Payments API",
    "version": "1.0.0",
    "description": "TON deposit/withdrawal endpoints"
  },
  "paths": {
    "/api/v1/payments/deposit": {
      "post": {
        "summary": "Create deposit intent",
        "description": "Records deposit intent (client initiates TON transfer separately)",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["ton_amount", "client_request_id"],
                "properties": {
                  "ton_amount": {"type": "string", "description": "TON amount (decimal string, e.g., '10.50')"},
                  "client_request_id": {"type": "string", "format": "uuid", "description": "Idempotency key"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deposit intent created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "payment_id": {"type": "string", "format": "uuid"},
                    "status": {"type": "string", "enum": ["PENDING"]},
                    "ton_amount": {"type": "string"},
                    "fuel_amount": {"type": "string", "description": "Equivalent FUEL amount"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/payments/withdraw": {
      "post": {
        "summary": "Create withdrawal intent",
        "description": "Locks FUEL and broadcasts TON transaction",
        "security": [{"BearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["fuel_amount", "ton_wallet_address", "client_request_id"],
                "properties": {
                  "fuel_amount": {"type": "string", "description": "FUEL amount to withdraw (decimal string)"},
                  "ton_wallet_address": {"type": "string", "description": "Destination TON wallet"},
                  "client_request_id": {"type": "string", "format": "uuid", "description": "Idempotency key"}
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Withdrawal initiated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "payment_id": {"type": "string", "format": "uuid"},
                    "status": {"type": "string", "enum": ["PENDING"]},
                    "fuel_amount": {"type": "string"},
                    "ton_amount": {"type": "string", "description": "Equivalent TON amount"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Insufficient balance or invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/payments/history": {
      "get": {
        "summary": "Get payment history",
        "description": "Returns user's deposit/withdrawal history",
        "security": [{"BearerAuth": []}],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "schema": {"type": "integer", "default": 20, "maximum": 100}
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {"type": "integer", "default": 0}
          }
        ],
        "responses": {
          "200": {
            "description": "Payment history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "payments": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "string", "format": "uuid"},
                          "payment_type": {"type": "string", "enum": ["DEPOSIT", "WITHDRAWAL"]},
                          "status": {"type": "string", "enum": ["PENDING", "CONFIRMED", "FAILED"]},
                          "ton_amount": {"type": "string"},
                          "fuel_amount": {"type": "string"},
                          "created_at": {"type": "string", "format": "date-time"}
                        }
                      }
                    },
                    "total": {"type": "integer"}
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {"type": "string"},
              "message": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
