{
  "openapi": "3.0.0",
  "info": {
    "title": "Nitro Drag Royale - Auth API",
    "version": "1.0.0",
    "description": "Authentication endpoints (cold path)"
  },
  "paths": {
    "/api/v1/auth/telegram": {
      "post": {
        "summary": "Authenticate via Telegram initData",
        "description": "Validates Telegram initData and issues App JWT + Centrifugo JWT",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["init_data"],
                "properties": {
                  "init_data": {
                    "type": "string",
                    "description": "Telegram WebApp initData string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentication successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "string", "format": "uuid"},
                        "telegram_id": {"type": "integer"},
                        "telegram_username": {"type": "string"},
                        "telegram_first_name": {"type": "string"},
                        "telegram_last_name": {"type": "string"}
                      }
                    },
                    "tokens": {
                      "type": "object",
                      "properties": {
                        "app_jwt": {"type": "string", "description": "JWT for HTTP API"},
                        "centrifugo_jwt": {"type": "string", "description": "JWT for Centrifugo connection"}
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid initData or signature",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {"type": "string"},
              "message": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
