{
  "openapi": "3.0.0",
  "info": {
    "title": "Nitro Drag Royale - Garage API",
    "version": "1.0.0",
    "description": "Garage state endpoints (canonical state reads)"
  },
  "paths": {
    "/api/v1/garage": {
      "get": {
        "summary": "Get garage state (balances, league access)",
        "description": "Returns canonical wallet balances and league availability",
        "security": [{"BearerAuth": []}],
        "responses": {
          "200": {
            "description": "Garage state",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {"type": "string", "format": "uuid"},
                        "display_name": {"type": "string"}
                      }
                    },
                    "wallet": {
                      "type": "object",
                      "properties": {
                        "fuel_balance": {"type": "string", "description": "FUEL balance (decimal string)"},
                        "burn_balance": {"type": "string", "description": "BURN balance (decimal string)"},
                        "rookie_races_completed": {"type": "integer", "minimum": 0, "maximum": 5}
                      }
                    },
                    "leagues": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {"type": "string", "enum": ["ROOKIE", "STREET", "PRO", "TOP_FUEL"]},
                          "buyin": {"type": "string", "description": "Buy-in amount (FUEL, decimal string)"},
                          "available": {"type": "boolean"},
                          "unavailable_reason": {"type": "string", "nullable": true, "description": "Error code if unavailable"}
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized (invalid or expired JWT)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {"type": "string"},
              "message": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
